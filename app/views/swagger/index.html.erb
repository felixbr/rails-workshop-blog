<!DOCTYPE html>
<html>
<head>
  <title>Swagger UI</title>

  <link rel="icon" type="image/png" href="<%= Rails.configuration.relative_url_root %>/swagger/images/favicon-32x32.png" sizes="32x32" />
  <link rel="icon" type="image/png" href="<%= Rails.configuration.relative_url_root %>/swagger/images/favicon-16x16.png" sizes="16x16" />
  <link href='<%= Rails.configuration.relative_url_root %>/swagger/css/typography.css' media='screen' rel='stylesheet' type='text/css'/>
  <link href='<%= Rails.configuration.relative_url_root %>/swagger/css/reset.css' media='screen' rel='stylesheet' type='text/css'/>
  <link href='<%= Rails.configuration.relative_url_root %>/swagger/css/screen.css' media='screen' rel='stylesheet' type='text/css'/>
  <link href='<%= Rails.configuration.relative_url_root %>/swagger/css/reset.css' media='print' rel='stylesheet' type='text/css'/>
  <link href='<%= Rails.configuration.relative_url_root %>/swagger/css/print.css' media='print' rel='stylesheet' type='text/css'/>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/jquery-1.8.0.min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/jquery.slideto.min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/jquery.wiggle.min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/jquery.ba-bbq.min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/handlebars-2.0.0.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/underscore-min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/backbone-min.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/swagger-ui.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/highlight.7.3.pack.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/marked.js' type='text/javascript'></script>
  <script src='<%= Rails.configuration.relative_url_root %>/swagger/lib/swagger-oauth.js' type='text/javascript'></script>

  <script type="text/javascript">
    $(function () {
      var API_ROOT = "<%= Rails.configuration.relative_url_root %>";

      var url = window.location.search.match(/url=([^&]+)/);
      if (url && url.length > 1) {
        url = decodeURIComponent(url[1]);
      } else {
        url = API_ROOT + "/api-docs.json";
      }
      window.swaggerUi = new SwaggerUi({
        url: url,
        dom_id: "swagger-ui-container",
        supportedSubmitMethods: ['get', 'post', 'put', 'delete', 'patch'],
        onComplete: function(swaggerApi, swaggerUi){
          if(typeof initOAuth == "function") {
            initOAuth({
              clientId: "your-client-id",
              realm: "your-realms",
              appName: "your-app-name"
            });
          }

          $('pre code').each(function(i, e) {
            hljs.highlightBlock(e)
          });

          addApiKeyAuthorization();
        },
        onFailure: function(data) {
          log("Unable to Load SwaggerUI");
        },
        docExpansion: "list",
        apisSorter: "alpha",
        showRequestHeaders: true
      });

      function addApiKeyAuthorization(){
        var key = encodeURIComponent($('#input_apiKey')[0].value);
        if(key && key.trim() != "") {
            var apiKeyAuth = new SwaggerClient.ApiKeyAuthorization("Authorization", "Bearer " + key, "header");
            window.swaggerUi.api.clientAuthorizations.add("Bearer", apiKeyAuth);

            log("added key " + key);
        }
      }

      $('#input_apiKey').change(addApiKeyAuthorization);

      // if you have an apiKey you would like to pre-populate on the page for demonstration purposes...
      var apiKey = "";
      $('#input_apiKey').val(apiKey);

      window.swaggerUi.load();

      function log() {
        if ('console' in window) {
          console.log.apply(console, arguments);
        }
      }
    });
  </script>
</head>

<body class="swagger-section">
<div id='header'>
  <div class="swagger-ui-wrap">
    <a id="logo" href="http://swagger.io">swagger</a>
    <form id='api_selector'>
      <div class='input'><input placeholder="http://example.com/api" id="input_baseUrl" name="baseUrl" type="text"/></div>
      <div class='input'><input placeholder="id_token" id="input_apiKey" name="apiKey" type="text"/></div>
      <div class='input'><a id="explore" href="#">Explore</a></div>
    </form>
  </div>
</div>

<div id="message-bar" class="swagger-ui-wrap">&nbsp;</div>
<div id="swagger-ui-container" class="swagger-ui-wrap"></div>
</body>
</html>
